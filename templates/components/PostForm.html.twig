<div{{ attributes }}>
    {{ form_start(form) }}
    {{ form_row(form.title) }}
    <div class="body-row">
        {{ form_label(form.body) }}
        {{ form_help(form.body) }}
        {{ form_errors(form.body) }}
        {{ form_widget(form.body) }}
    </div>
    {{ form_rest(form) }}
    <button class="btn btn-primary">Enregistrer</button>
    {{ form_end(form) }}
</div>
